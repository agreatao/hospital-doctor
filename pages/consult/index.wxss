page {
    background-color: #f5f5f5;
}

.input-container {
    background-color: #fff;
    padding: 10px;
    margin-bottom: 10px;
}

.input-group {
    background-color: rgba(0, 0, 0, 0.08);
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 5px 10px;
}

.search-img {
    width: 32rpx;
    height: 32rpx;
}

.search-input {
    flex: 1;
    padding-left: 5px;
}

.search-btn {
    color: #7b7b7b;
}

.newest-container, .present-container {
    background-color: #fff;
    margin-bottom: 10px;
    padding-bottom: 10px;
}

.title {
    font-size: 44rpx;
    font-weight: 600;
}

.present-container {
    margin-bottom: 0;
}

.newest-header, .present-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 10px 10px 10px 20px;
    border-bottom: 1px solid #eaeaea;
}

.newest-header navigator {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 32rpx;
    color: #868fa0;
}

.newest-header navigator text {
    font-size: 32rpx;
    color: #ff4f29;
}

.newest-header image {
    width: 17.5rpx;
    height: 30rpx;
    margin-left: 5px;
}
