page {
    width: 100%;
    height: 100%;
}

.bg {
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
}

.login-container {
    display: block;
    position: fixed;
    left: 40rpx;
    right: 40rpx;
    top: 0;
    padding: 40rpx 0 40rpx 0;
    background: #fff;
    box-shadow: 0px 8px 18px 0px rgba(0, 0, 0, 0.16);
    border-radius: 12rpx;
}

.yhd {
    display: block;
    text-align: right;
    font-size: 28rpx;
    color: #1e8ad1;
    padding-right: 38rpx;
}

.logo {
    display: block;
    width: 150rpx;
    height: 150rpx;
    margin: 64rpx auto 0 auto;
}

.app-name {
    display: block;
    font-size: 96rpx;
    color: #009fe9;
    margin-top: 48rpx;
    letter-spacing: 60rpx;
    margin-left: 60rpx;
    font-weight: bolder;
    text-align: center;
}

.login-from {
    margin-top: 120rpx;
}

.input-view {
    display: block;
    margin: 0 15px;
    height: 88rpx;
    background: #fff;
    border-radius: 4px;
    border: 1px solid #c6c6c6;
    margin-bottom: 50rpx;
}

.input-view image {
    width: 48rpx;
    height: 48rpx;
    float: left;
    margin-top: 20rpx;
    margin-left: 24rpx;
}

.input-view input {
    width: 500rpx;
    height: 68rpx;
    float: left;
    margin-left: 10rpx;
    margin-top: 10rpx;
    font-size: 28rpx;
}

.forget {
    font-size: 28rpx;
    color: #1e8ad1;
}
